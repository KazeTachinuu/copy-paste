{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/paste/:code",
      "destination": "/api/paste?code=:code"
    },
    {
      "source": "/api/paste",
      "destination": "/api/paste"
    },
    {
      "source": "/list",
      "destination": "/list.html"
    }
  ]
}
